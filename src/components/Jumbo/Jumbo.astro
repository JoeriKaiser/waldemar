---
import { Image } from 'astro:assets';
import base from "../../../public/images/base.png";
import overlay from "../../../public/images/overlay.png";
---

<div class="container">
  <div class="image-container" id="imageContainer">
    <Image src={base} alt="Base Image" class="base" />
    <Image src={overlay} alt="Overlay Image" class="overlay" />
  </div>
  <div class="description">
    <h2>Hi there! I'm Joeri</h2>
    <p>I'm an enthusiastic web developer passionate about crafting engaging and intuitive user experiences</p>
  </div>
</div>

<script>
  const overlayImg = document.querySelector('.overlay');
  overlayImg?.addEventListener('click', () => overlayImg.classList.toggle('fade-in'));
</script>

<style>
  .container {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    padding: 1rem;
  }

  .image-container {
    position: relative;
    width: 300px;
    height: 300px;
    cursor: pointer;
    flex-shrink: 0;
  }

  .base, .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: opacity 0.5s ease-in-out;
  }

  .base {
    transform: scale(0.96);
  }

  .overlay {
    opacity: 0;
  }

  .fade-in {
    opacity: 1;
  }

  .description {
    align-self: center;
    flex: 1;
    max-width: 500px;
    text-align: center;
    padding: 1rem;
  }

  .description h2 {
    text-align: left;
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .description p {
    text-align: left;
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      align-items: center;
    }

    .image-container {
      position: relative;
      width: 200px;
      height: 200px;
      max-width: 100%;
      flex-shrink: 0;
    }

    .description h2 {
      font-size: 1.5rem;
    }

    .description p {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .description h2 {
      font-size: 1.25rem;
    }

    .description p {
      font-size: 0.8rem;
    }

    .image-container {
      position: relative;
      width: 150px;
      height: 150px;
      flex-shrink: 0;
    }

    .image-container img {
      max-width: 100%;
      max-height: 100%;
    }
  }
</style>
