---
const currentYear = new Date().getFullYear();

const socialLinks = [
	{
		name: "GitHub",
		url: "https://github.com/JoeriKaiser",
	},
	{
		name: "LinkedIn",
		url: "https://www.linkedin.com/in/joeri-kaiser",
	},
];

const email = "joeri.waldemar@gmail.com";
---

<footer class="container-center text-center">
  <div class="relative before:content-[''] before:absolute before:top-0 before:left-1/2 before:-translate-x-1/2 before:w-full before:h-px before:bg-[var(--color-text)] before:opacity-20">
    <div class="bg-[var(--color-bg)] text-[var(--color-text)] py-[var(--space-l)]">
      <div class="flex justify-center max-w-[800px] mx-auto gap-[var(--space-l)] max-sm:flex-col">
        <div class="flex-1">
          <h3 class="text-[1.2rem] mb-[var(--space-s)]">Connect</h3>
          <ul class="list-none p-0 m-0 flex flex-col gap-[var(--space-xs)] text-left container-center">
            {socialLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="link-underline"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div class="flex-1">
          <h3 class="text-[1.2rem] mb-[var(--space-s)]">Contact</h3>
          <a href={`mailto:${email}`} class="link-underline">Email Me</a>
        </div>
      </div>
      <div class="mt-[var(--space-l)] text-center text-[0.9rem]">
        &copy; {currentYear} Joeri Kaiser. Made with Astro ❤️
      </div>
    </div>
  </div>
</footer>
