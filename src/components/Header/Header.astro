---
import Logo from "./Logo.astro";

const navigation = [
	{
		label: "About",
		url: "/about",
	},
];
---

<header class="py-2">
  <div class="container-center">
    <nav id="nav" class="flex items-center justify-between gap-[var(--space-s)]">
      <Logo />
      <ul class="flex items-stretch gap-1 list-none p-0 m-0">
        {navigation.map((item) => (
          <li>
            <a
              href={item.url}
              class="relative no-underline text-[var(--gray-8)] font-medium text-lg transition-colors duration-300 hover:text-[var(--color-secondary)]"
            >
              {item.label}
              <span
                class="absolute left-0 -bottom-1 h-0.5 w-full bg-[var(--color-secondary)] origin-left scale-x-0 transition-transform duration-300 group-hover:scale-x-100"
              ></span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
