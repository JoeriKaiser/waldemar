---
import Logo from "./Logo.astro";

const navigation = [
	{
		label: "About",
		url: "/about",
	},
];
---

<header>
  <div class="center">
    <nav id="nav">
      <Logo />
      <ul class="links">
        {
          navigation.map((item) => (
            <li>
              <a href={item.url}>
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style lang="scss">
  header {
    padding: 10px 0;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-s);
  }
  .center {
    box-sizing: content-box;
    margin-inline: auto;
    width: calc(100% - (var(--space-xl) * 2));
    max-inline-size: 800px;
  }

  .links {
    display: flex;
    align-items: stretch;
    gap: var(--space-2xs);
    list-style: none;
    padding: 0;
    margin: 0;

    a {
      text-decoration: none;
      color: var(--gray-8);
      font-weight: 500;
      position: relative;
      transition: color 0.3s ease;
      font-size: large;
    }
  }
  .links a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: var(--secondary-color);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease-out;
  }

  .links a:hover,
  .links a.active {
    color: var(--secondary-color);
  }
  .links a:hover::after,
  .links a.active::after {
    transform: scaleX(1);
  }

  .links a.active::after {
    transform: scaleX(1);
    background-color: var(--accent-color);
  }
</style>
