---
import { ClientRouter } from "astro:transitions";
import Footer from "../components/Footer/Footer.astro";
import Header from "../components/Header/Header.astro";
import "../styles/global.css";
import "../styles/theme.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
const pageTitle =
	Astro.url.pathname === "/" ? title : `${title} Â· Joeri Kaiser`;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark light" />
    <meta name="theme-color" content="#304243" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#111111" />
    <title>{pageTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <ClientRouter />

    <div transition:persist="header">
      <Header />
    </div>

    <div transition:name="main-content" transition:animate="slide">
      <slot />
    </div>

    <div transition:persist="footer">
      <Footer />
    </div>
  </body>
</html>

<style is:global lang="scss">
  body {
    min-height: 95vh;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  :root {
    --vt-fade-duration-old: 180ms;
    --vt-fade-duration-new: 420ms;
    --vt-slide-duration: 600ms;
    --vt-slide-offset: 30px;
    --vt-ease-out-cubic: cubic-bezier(0.4, 0, 0.2, 1);
    --vt-ease-in-cubic: cubic-bezier(0.4, 0, 1, 1);
    --vt-fade-delay-new: 90ms;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
  }

  @keyframes fade-out {
    to {
      opacity: 0;
    }
  }

  @keyframes slide-from-right {
    from {
      transform: translateX(var(--vt-slide-offset));
    }
  }

  @keyframes slide-to-left {
    to {
      transform: translateX(calc(-1 * var(--vt-slide-offset)));
    }
  }

  ::view-transition-old(slide) {
    animation:
      var(--vt-fade-duration-old) var(--vt-ease-in-cubic) both fade-out,
      var(--vt-slide-duration) var(--vt-ease-out-cubic) both slide-to-left;
  }

  ::view-transition-new(slide) {
    animation:
      var(--vt-fade-duration-new) var(--vt-ease-out-cubic) var(--vt-fade-delay-new) both fade-in,
      var(--vt-slide-duration) var(--vt-ease-out-cubic) both slide-from-right;
  }

  * {
    font-family: "Lexend", sans-serif;
  }
</style>
