---
import { ClientRouter } from "astro:transitions";
import Footer from "../components/Footer/Footer.astro";
import Header from "../components/Header/Header.astro";
import CommandPalette from "../components/CommandPalette/CommandPalette.astro";
import "../styles/tailwind.css";
import "../styles/tokens.css";
import "../styles/layer.css";
import "../styles/theme.css";
import ViewTransitionMorph from "../components/ViewTransitionMorph.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
const pageTitle = Astro.url.pathname === "/" ? title : `${title} Â· Joeri Kaiser`;
---

<!doctype html>
<html lang="en" transition:animate="none" data-no-hero-transition>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light" />
    <meta name="theme-color" content="#faf6f1" />
    <title>{pageTitle}</title>
    <!-- Fonts loaded via CSS @import in tokens.css -->
  </head>
  <body>
    <ClientRouter />
    <ViewTransitionMorph />

    <div transition:persist="header">
      <Header />
    </div>

    <slot />

    <div transition:persist="footer">
      <Footer />
    </div>

    <CommandPalette />
  </body>
</html>

<style is:global>
  :root {
    /* View Transition timing */
    --vt-fade-duration-old: 180ms;
    --vt-fade-duration-new: 420ms;
    --vt-slide-duration: 500ms;
    --vt-slide-offset: 24px;
    --vt-ease-out: cubic-bezier(0.16, 1, 0.3, 1);
    --vt-ease-in: cubic-bezier(0.4, 0, 1, 1);
    --vt-ease-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);
    --vt-fade-delay-new: 80ms;
  }

  /* Page transition animations */
  @keyframes fade-in {
    from {
      opacity: 0;
    }
  }
  @keyframes fade-out {
    to {
      opacity: 0;
    }
  }
  @keyframes slide-from-right {
    from {
      transform: translateX(var(--vt-slide-offset));
    }
  }
  @keyframes slide-to-left {
    to {
      transform: translateX(calc(-1 * var(--vt-slide-offset)));
    }
  }

  /* Grow in animation for page content */
  @keyframes grow-in {
    from {
      opacity: 0;
      transform: scale(0.98) translateY(12px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  @keyframes grow-out {
    to {
      opacity: 0;
      transform: scale(0.98) translateY(-8px);
    }
  }

  ::view-transition-old(slide) {
    animation:
      var(--vt-fade-duration-old) var(--vt-ease-in) both fade-out,
      var(--vt-slide-duration) var(--vt-ease-out) both slide-to-left;
  }
  ::view-transition-new(slide) {
    animation:
      var(--vt-fade-duration-new) var(--vt-ease-out) var(--vt-fade-delay-new) both fade-in,
      var(--vt-slide-duration) var(--vt-ease-out) both slide-from-right;
  }

  ::view-transition-old(main-content) {
    animation: var(--vt-fade-duration-old) var(--vt-ease-in) both grow-out;
  }
  ::view-transition-new(main-content) {
    animation: var(--vt-fade-duration-new) var(--vt-ease-bounce) var(--vt-fade-delay-new) both
      grow-in;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeOutUp {
    to {
      opacity: 0;
      transform: translateY(-8px);
    }
  }
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeOutDown {
    to {
      opacity: 0;
      transform: translateY(12px);
    }
  }

  /* Warm background with subtle organic shapes */
  body::before {
    content: "";
    position: fixed;
    inset: -10%;
    background:
      /* Top-left warm blob */
      radial-gradient(
        600px 600px at 15% 20%,
        color-mix(in oklab, var(--wc-accent-muted) 25%, transparent),
        transparent 60%
      ),
      /* Top-right olive accent */
      radial-gradient(
          500px 500px at 85% 15%,
          color-mix(in oklab, var(--wc-olive-soft) 18%, transparent),
          transparent 55%
        ),
      /* Bottom warm spread */
      radial-gradient(
          700px 700px at 50% 95%,
          color-mix(in oklab, var(--wc-sand) 30%, transparent),
          transparent 60%
        );
    pointer-events: none;
    z-index: -1;
    opacity: 0.6;
    filter: blur(40px);
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-old(slide),
    ::view-transition-new(slide),
    ::view-transition-old(main-content),
    ::view-transition-new(main-content),
    ::view-transition-old(hero-section),
    ::view-transition-new(hero-section) {
      animation: none !important;
    }
  }
</style>
