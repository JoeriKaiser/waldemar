---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found">
  <main>
    <section
      class="container-center flex flex-col items-center justify-center text-center min-h-[calc(100vh-200px)] py-[var(--space-3xl)]"
    >
      <h1 class="text-5xl font-bold text-[var(--color-secondary)] mb-[var(--space-s)]">404</h1>
      <p class="text-xl mb-[var(--space-xl)]">Oops! The page you're looking for doesn't exist.</p>
      <a
        href="/"
        class="inline-flex items-center px-[var(--space-l)] py-[var(--space-s)] bg-[var(--color-secondary)] text-[var(--color-bg)] font-semibold rounded-md transition duration-200 hover:-translate-y-0.5 hover:shadow-lg no-underline"
      >
        Go back home
      </a>
    </section>
  </main>
</BaseLayout>
